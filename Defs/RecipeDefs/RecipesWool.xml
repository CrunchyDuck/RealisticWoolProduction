<?xml version="1.0" encoding="utf-8"?>
<Defs>
            <!-- Wool Recipe Parent -->
  <RecipeDef Abstract="True" Name="SMRW_RecipeWoolBase">
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>350</workAmount>
    <allowMixingIngredients>false</allowMixingIngredients>
	<targetCountAdjustment>50</targetCountAdjustment>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
	<workSkill>Crafting</workSkill>
  </RecipeDef>
  
  
  
  <RecipeDef ParentName="SMRW_RecipeWoolBase">
    <defName>SMRW_Make_WoolMegasloth</defName>
	<label>weave Megasloth wool</label>
	<description>Create Megasloth wool from Megasloth fleece.</description>
	<jobString>Making megasloth wool</jobString>
	<ingredients>
	  <li>
	    <filter>
		  <thingDefs>
		    <li>SMRW_megaslothFleece</li>
		  </thingDefs>
		</filter>
	    <count>50</count>
	  </li>
	</ingredients>
	<products>
	  <WoolMegasloth>50</WoolMegasloth>
	</products>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>SMRW_megaslothFleece</li>
	  </thingDefs>
	</fixedIngredientFilter>
  </RecipeDef>
  

