<?xml version="1.0" encoding="utf-8"?>
<Defs>
            <!-- Wool Recipe Parent -->
  <RecipeDef Abstract="True" Name="RecipeWoolBase">
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>500</workAmount>
    <allowMixingIngredients>false</allowMixingIngredients>
	<targetCountAdjustment>50</targetCountAdjustment>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
	<workSkill>Crafting</workSkill>
  </RecipeDef>
  
  
  
  <RecipeDef ParentName="RecipeWoolBase">
    <defName>Make_WoolMegasloth</defName>
	<label>megasloth wool</label>
	<description>Create Megasloth wool from Megasloth fleece.</description>
	<jobString>Making megasloth wool</jobString>
	<ingredients>
	  <li>
	    <filter>
		  <thingDefs>
		    <li>megaslothFleece</li>
		  </thingDefs>
		</filter>
	    <count>50</count>
	  </li>
	</ingredients>
	<products>
	  <WoolMegasloth>50</WoolMegasloth>
	</products>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>megaslothFleece</li>
	  </thingDefs>
	</fixedIngredientFilter>
  </RecipeDef>
  

